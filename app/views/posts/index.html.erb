<p style="color: green"><%= notice %></p>

<h1>Posts </h1>

<%= link_to "New post", new_post_path, class:"button button-outline" %>
<%= turbo_frame_tag "posts_search", target: "posts" do %>
<form >
  <fieldset>
    <input type="text" name="query" minlength="3" placeholder="Search Posts" value="<%= @query %>" id="nameField">
  </fieldset>
  <button>Search</button>
</form>
<% end %>
<%= turbo_frame_tag "posts" do %>
    <% if @query %>
    <h1>Search Posts for "<%= @query %>"</h1>
    <% end %>
    <% @posts.each do |post| %>
    <%= link_to post do %>
      <%= render post %>
    <% end %>
    <% end %>
<% end %>


